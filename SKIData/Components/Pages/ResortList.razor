@page "/resorts"
@using SKIData  // Assuming your SkiResort model is in the SKIData namespace
@using Microsoft.EntityFrameworkCore
@inject Data.SkiResortContext SkiResortContext

<h3>Resort List</h3>

@if (resorts == null)
{
    <p>Loading...</p>
}
else if (!resorts.Any())
{
    <p><em>No ski resorts loaded.</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <!-- Add other columns here -->
            </tr>
        </thead>
        <tbody>
            @foreach (var resort in resorts)
            {
                <tr>
                    <td>@resort.Name</td>
                    <td><a href="@resort.Description" target="_blank">@resort.Description</a></td>
                    <!-- Add other data display here -->
                </tr>
            }
        </tbody>
    </table>
}


@code {
    private List<Model.SkiResort> resorts;

    protected override async Task OnInitializedAsync()
    {
        //Fetch the data
        resorts = await SkiResortContext.SkiResorts.ToListAsync();
    }
}